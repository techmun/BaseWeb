                    </div>
                    <main role="main" class="pb-2">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        $(function ($) {
            let url = window.location.href;
            $('li a').each(function () {
                if (this.href === url) {
                    $(this).closest('li').addClass('active');
                }
            });
        });

        $(document).on("ajaxStart", function () {
            $('.loader').show();
        }); 
        
        $(document).on("ajaxStop", function () {
            $('.loader').hide();
        })
    </script>

