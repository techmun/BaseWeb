    <div class="container w-100">
        <div class="main">
            <div class="row">
                <div class="col-1 col-lg-3 vh-100">
                    <div style="height:250px;">
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between p-5">
